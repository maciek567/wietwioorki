<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.wietwioorki.to22019.controller.HomeSceneController">
  <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
          <opaqueInsets>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </opaqueInsets>
          <Text text="What do you want to do?">
               <VBox.margin><Insets bottom="20" left="20" right="20" top="20" />
               </VBox.margin></Text>
          <Button text="Add new reader"  id="reader" fx:id="addReaderButton" onAction="#handleNewReader"
                 prefHeight="50" prefWidth="200">
               <VBox.margin><Insets bottom="20" left="20" right="10" top="20" />
               </VBox.margin></Button>
          <Button text="Add new book" id="book" fx:id="addBookButton"  onAction="#handleNewBook"
                 prefHeight="50.0" prefWidth="200">
              <VBox.margin><Insets bottom="20" left="20" right="10" top="20" />
              </VBox.margin></Button>
          <Button text="Show books list" id="bookList" fx:id="showBookListButton"  onAction="#handleShowBookList"
                  prefHeight="50.0" prefWidth="200">
              <VBox.margin> <Insets bottom="20" left="20" right="10" top="20" />
              </VBox.margin></Button>
      </VBox>
   </center>
   <right>
       <VBox alignment="TOP_CENTER" BorderPane.alignment="TOP_CENTER">
           <opaqueInsets>
               <Insets bottom="10.0" left="10.0" right="10.0" top="40.0" />
           </opaqueInsets>
           <Button text="Login"  id="enterLogin" fx:id="enterLogin" onAction="#handleEnterLogin"
                   prefHeight="30" prefWidth="100">
               <VBox.margin><Insets bottom="7" left="0" right="30" top="40" />
               </VBox.margin></Button>
           <Button text="Register" id="enterRegistration" fx:id="enterRegistration"  onAction="#handleEnterRegistration"
                   prefHeight="30.0" prefWidth="100">
               <VBox.margin><Insets bottom="10" left="0" right="30" top="7" />
               </VBox.margin></Button>
       </VBox>
   </right>
</BorderPane>
