<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.wietwioorki.to22019.controller.AddAuthorController">
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </opaqueInsets>
            <Text text="Fill in information about the author of the books:">
                <VBox.margin>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </VBox.margin>
            </Text>
            <TextField promptText="Name:" id="name" fx:id="name"
                       prefHeight="30" prefWidth="200">
                <VBox.margin>
                    <Insets bottom="15" left="20" right="20" top="15"/>
                </VBox.margin>
            </TextField>
            <TextField promptText="Surname:" id="surname" fx:id="surname"
                       prefHeight="30" prefWidth="200">
                <VBox.margin>
                    <Insets bottom="15" left="20" right="20" top="15"/>
                </VBox.margin>
            </TextField>
            <Label prefHeight="24.0" prefWidth="97.0" text="Date of birth: " GridPane.halignment="CENTER"
                   GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
            <DatePicker id="birthDate" fx:id="birthDate" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button text="Add" id="addAuthor" fx:id="addAuthorButton" onAction="#handleAddNewAuthor"
                    prefHeight="50.0" prefWidth="200">
                <VBox.margin>
                    <Insets bottom="20" left="20" right="20" top="20"/>
                </VBox.margin>
            </Button>
        </VBox>

    </center>
</BorderPane>