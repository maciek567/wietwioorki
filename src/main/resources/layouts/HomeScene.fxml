<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.wietwioorki.to2019.controller.HomeSceneController">
  <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
          <opaqueInsets>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </opaqueInsets>
          <children>
             <Text text="What do you want to do?">
                 <VBox.margin>
                     <Insets bottom="20" left="20" right="20" top="20" />
                 </VBox.margin></Text>
             <Button text="Add new reader"  id="reader" fx:id="reader" onAction="#handleNewReader"
                     prefHeight="50" prefWidth="200">
                  <VBox.margin>
                      <Insets bottom="20" left="20" right="20" top="20" />
                  </VBox.margin></Button>
             <Button text="Add new book" id="book" fx:id="book"  onAction="#handleNewBook"
                     prefHeight="50.0" prefWidth="200">
                  <VBox.margin>
                      <Insets bottom="20" left="20" right="20" top="20" />
                  </VBox.margin></Button>
          </children>
      </VBox>

   </center>
</BorderPane>
