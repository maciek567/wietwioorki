<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.wietwioorki.to22019.controller.ReservationListController">
    <top>
        <VBox alignment="TOP_RIGHT" prefHeight="30" prefWidth="200.0" BorderPane.alignment="CENTER">
            <TextField promptText="Id:" id="filterField" fx:id="filterField"
                       prefHeight="30" prefWidth="200">
            </TextField>
        </VBox>
    </top>
    <center>
        <TableView fx:id="reservationTable" prefHeight="600.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="reservationId" prefWidth="75.0" text="reservation id" />
                <TableColumn fx:id="readerPesel" prefWidth="75.0" text="pesel" />
                <TableColumn fx:id="readerName" prefWidth="75.0" text="name" />
                <TableColumn fx:id="booksTittle" prefWidth="75.0" text="book's tittle" />
                <TableColumn fx:id="borrowingDate" prefWidth="75.0" text="borrowing date" />
                <TableColumn fx:id="returnDate" prefWidth="75.0" text="return date" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <VBox>
            <Button id="cancelReservationFromReservationList" fx:id="cancelReservationFromReservationList" onAction="#handleCancelReservationFromReservationList"
                    prefHeight="30" prefWidth="130" text="Cancel reservation">
                <VBox.margin><Insets bottom="7" left="10" right="15" top="20" />
                </VBox.margin></Button>
            <Button id="borrowBookFromReservationList" fx:id="borrowBookFromReservationList" onAction="#handleBorrowBookFromReservationList"
                    prefHeight="30" prefWidth="130" text="Borrow book">
                <VBox.margin><Insets bottom="7" left="10" right="15" top="20" />
                </VBox.margin></Button>
            <Button id="returnBookFromReservationList" fx:id="returnBookFromReservationList" onAction="#handleReturnBookFromReservationList"
                    prefHeight="30" prefWidth="130" text="Return book">
                <VBox.margin><Insets bottom="7" left="10" right="15" top="20" />
                </VBox.margin></Button>
        </VBox>
    </right>
</BorderPane>
